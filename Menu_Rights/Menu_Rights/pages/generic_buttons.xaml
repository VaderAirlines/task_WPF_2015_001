<Page x:Class="Menu_Rights.pages.generic_buttons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="generic_buttons"
      ShowsNavigationUI="False">

    <Grid>
        <StackPanel>
            <Button Name="btnCreate" Width="100" Height="20" IsEnabled="{Binding Path=rights.canCreate}" Content="create"></Button>
            <Button Name="btnRead" Width="100" Height="20" IsEnabled="{Binding Path=rights.canRead}" Content="read"></Button>
            <Button Name="btnUpdate" Width="100" Height="20" IsEnabled="{Binding Path=rights.canUpdate}" Content="update"></Button>
            <Button Name="btnDelete" Width="100" Height="20" IsEnabled="{Binding Path=rights.canDelete}" Content="delete"></Button>
            <Button Name="btnClose" Width="100" Height="20" Click="closeWindow" Content="close"></Button>
        </StackPanel>
    </Grid>
</Page>
